<p style="color: green"><%= notice %></p>

<h1>Events</h1>
<div id="events">

  <% @events.each do |event| %>
    <% if event.user == current_user %>
      <%= render event %>
      <p>
        <%= link_to "Show this event", event %>
      </p>
    <% end %>
  <% end %>
</div>

<%= link_to "New event", new_event_path %>
