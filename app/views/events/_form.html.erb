<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, required: 'true' %>
  </div>

  <div>
    <%= form.number_field :user_id, id: :event_user_id, class: "form-control", value: current_user.id, type: :hidden %>
  </div>
  <div>
    <%= form.datetime_select :event_date, class: "form-control selectpicker", :default => { :hour => 00, :minute => 00 } %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
