<div class="container text-center align-content-center w-25 p-0">
  <div class="card">
    <div class="card-header">
      <h1>Log in</h1>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mx-4 my-3">
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "Email" %>
      </div>

      <div class="mx-4 my-3">
        <%= f.password_field :password, class: "form-control", autofocus: true, autocomplete: "current-password", placeholder: "password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-label">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions mb-2">
        <%= f.submit "Log in", class: "btn btn-warning" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>